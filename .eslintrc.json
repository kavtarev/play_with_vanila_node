{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "comma-dangle": ["error", "always-multiline"],
        "no-empty": "off",
        "camelcase": "off",
        "no-inner-declarations": "off",
        "no-restricted-syntax":"off",
        "no-await-in-loop": "off",
        "no-use-before-define": "off",
        "no-param-reassign": "off",
        "no-unused-vars": "warn",
        "no-console": "off",
        "no-shadow": "off",
        "no-underscore-dangle": 0,
        "import/prefer-default-export": "off",
        "func-names": "off",
        "max-classes-per-file": "off",
        "import/extensions": [
            "off",
            "ignorePackages",
            {
              "js": "never",
              "jsx": "never",
              "ts": "never",
              "tsx": "never"
            }
        ]
    }
}
